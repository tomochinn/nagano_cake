<h2>配送先編集</h2>

<%= form_with model: @address, url:address_path(@address.id), method: :patch do |f| %>

<table class= "table">
  <tr>
    <th><%= f.label :郵便番号（ハイフンなし） %></th>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <th><%= f.label :住所 %></th>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <th><%= f.label :宛名 %></th>
    <td><%= f.text_field :recipient_name %></td>
  </tr>
</table>

<div class="actions">
  <%= f.submit "変更内容を保存", class: "btn btn-success" %>
</div>

<% end %>


