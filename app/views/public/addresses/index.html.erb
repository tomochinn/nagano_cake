<h2>配送先登録/一覧</h2>

<%= form_with model: @address do |f| %>

<table class= "table">
  <tr>
    <th><%= f.label :郵便番号（ハイフンなし） %></th>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <th><%= f.label :住所 %></th>
    <td><%= f.text_area :address %></td>
  </tr>
  <tr>
    <th><%= f.label :宛名 %></th>
    <td><%= f.text_field :recipient_name %></td>
  </tr>

</table>

<%= f.submit "新規登録", class: "btn btn-success" %>
<% end %>


<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <td></td>
      <td></td>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.recipient_name %></td>
      <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %></td>
      <td><%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>