<h2>注文履歴一覧</h2>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.created_at.strftime("%Y/%m/%d"), admin_order_detail_path(order_detail.id) %></td>
      <td><%#= customer.last_name, admin_customer_path(customer.id) %></td>
      <td><%= order.amount %></td>
    </tr>
    <% end %>
  </tbody>
</table>