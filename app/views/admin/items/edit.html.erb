<h2>商品編集</h2>
<%= form_with model: @item do |f| %>

<div class="field">
    <%= f.label :商品画像 %>
    <!--画像挿入-->
  </div>

  <div class="field">
    <%= f.label :商品名 %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :商品説明 %>
    <%= f.text_field :introduction %>
  </div>

  <div class="field">
    <%= f.label :税抜価格 %>
    <%= f.text_field :price %>
  </div>

  <%= f.submit '変更を保存', class: "btn btn-success" %>

<% end %>