<h2>商品一覧</h2>
<div class="text-right">
  <%= link_to "+", new_admin_item_path, class: "btn btn-outline-secondary rounded-circle p-2" %>
</div>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.price %></td>
    </tr>
    <% end %>
  </tbody>
</table>
  
<%#= paginate @items %>